<div class="container">
  <div class="row">
    <div class="card login-card" style="width: 25rem;">
        <div class="card-body">
          <h4 class="card-title">ログイン</h4>
          <hr class="my-3">

          <p class="login-text">メールアドレスでログイン</p>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " メールアドレス" %>
              </div>

              <div class="field"><br />
                <%= f.password_field :password, autocomplete: "current-password", placeholder: " パスワード" %>
              </div><br />

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <span class="form-label">次回から自動的にログイン</span>
                </div><br />
              <% end %>

              <div class="actions">
                <%= f.submit "ログイン", class: "submit" %>
              </div>

            <% end %>
            <hr class="my-3">
              <%= link_to "会員登録",  new_user_registration_path, class: "signup-link" %>

        </div>
    </div>
  </div>
</div>
