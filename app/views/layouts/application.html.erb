<!DOCTYPE html>
<html>
  <head>
    <title>Ethinavi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
  </head>

  <body>
      <header>
         <% if user_signed_in? %>
          <!-- ログインしているユーザー -->
            <% if current_user.user_flag == 0 %>
              <nav class="navbar navbar-expand-lg navbar-light p-3" style="background-color: #F0F0F0;">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="ナビゲーションの切替">
                  <span class="navbar-toggler-icon"></span>
                </button>

                <a class="navbar-brand" href="/">Ethinavi</a>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                   <ul class="navbar-nav mr-auto"></ul>
                  <ul class="navbar-nav">

                    <li class="nav-item">
                      <%= link_to "Ethinaviとは...", home_about_path, class: "nav-link active" %>
                    </li>

                    <li class="nav-item dropdown">
                      <a href="#" class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" id="navbarDropdownMenuLink" aria-haspopup="true" aria-expanded="false"><%= current_user.name %></a>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <%= link_to "編集", edit_user_path(current_user.id), class: "dropdown-item" %>
                        <%= link_to "ログアウト", destroy_user_session_path, class: "dropdown-item" %>
                      </div>
                    </li>

                  </ul>
                </div>

              </nav>
          <!-- 管理者 -->
            <% elsif current_user.user_flag == 1 %>

            <nav class="navbar navbar-expand-lg navbar-light p-3" style="background-color: #F0F0F0;">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="ナビゲーションの切替">
                  <span class="navbar-toggler-icon"></span>
                </button>

                <a class="navbar-brand" href="/">Ethinavi</a>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                  <ul class="navbar-nav mr-auto"></ul>
                  <ul class="navbar-nav">

                    <li class="nav-item">
                      <%= link_to "Ethinaviとは...", home_about_path, class: "nav-link active" %>
                    </li>

                    <li class="nav-item">
                      <%= link_to "新規投稿", new_shop_path, class: "nav-link active" %>
                    </li>
                     <li class="nav-item">
                        <%= link_to "ログアウト", destroy_user_session_path, class: "dropdown-item" %>
                     </li>
                  </ul>
                </div>

              </nav>
          <!-- ログインしていないユーザー -->
            <% else %>
            <nav class="navbar navbar-expand-lg navbar-light p-3" style="background-color: #F0F0F0;">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="ナビゲーションの切替">
                  <span class="navbar-toggler-icon"></span>
                </button>

                <a class="navbar-brand" href="/">Ethinavi</a>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                  <ul class="navbar-nav mr-auto"></ul>
                  <ul class="navbar-nav">

                    <li class="nav-item">
                      <%= link_to "Ethinaviとは...", home_about_path, class: "nav-link active" %>
                    </li>

                    <li class="nav-item">
                      <%= link_to "新規登録",  new_user_registration_path, class: "nav-link active" %>
                    </li>
                     <li class="nav-item">
                        <%= link_to "ログイン", new_user_session_path, class: "dropdown-item" %>
                     </li>
                  </ul>
                </div>

              </nav>
            <% end %>
          <% end %>
      </header>



    <%= yield %>

    <footer class="footer">
       <ul class="footer-items">
         <li>利用規約</li>
         <li>お問い合わせ</li>
         <li><i class="fab fa-twitter"></i></li>
         <li><p class="footer-text">©︎ Ethinavi All rights reseverd.</p></li>
       </ul>
      </footer>
  </body>
</html>
